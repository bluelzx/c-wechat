			<dependency>
				<groupId>org.opensymphony.quartz</groupId>
				<artifactId>quartz</artifactId>
				<version>1.6.1</version>
			</dependency>
			<dependency> 
				<groupId>kaptcha</groupId> 
				<artifactId>kaptcha</artifactId> 
				<version>2.3.2</version> 
			</dependency>
